{
	"plugins": [
		"stylelint-scss"
	],
	"ignoreFiles": [
		"src/sass/tools/**/*.scss",
		"src/sass/base/_base.normalize.scss"
	],
	"defaultSeverity": "warning",

	"rules": {
		"scss/at-extend-no-missing-placeholder": true,
		"scss/dollar-variable-colon-space-after": "always",
		"scss/selector-no-redundant-nesting-selector": true,
		"color-no-invalid-hex": [true, {
			"message": "Formato no válido de color"
		}],
		"function-linear-gradient-no-nonstandard-direction": true,
		"string-no-newline": true,
		"unit-no-unknown": true,
		"shorthand-property-no-redundant-values": true,
		"keyframe-declaration-no-important": true,
		"declaration-block-no-duplicate-properties": [true, {
			"ignore": ["consecutive-duplicates"],
			"message": "propiedades duplicadas. Si es fallback deben ser consecutivos"
		}],
		"declaration-block-no-shorthand-property-overrides": [true, {
			"message": "el shorthand no debe sobreescribir"
		}],
		"block-no-empty": [ true, {
			"message": "No se permiten propiedades sin valor"
		}],
		"selector-type-no-unknown": true,
		"selector-pseudo-element-no-unknown": true,
		"comment-no-empty": true,
		"no-extra-semicolons": true,
		"declaration-no-important": [true, {
			"message": "Cuidado con los important. Busca otra alternativa"
		}],
		"declaration-block-single-line-max-declarations": [1, {
			"message": "Cada declaración debe tener su línea propia"
		}],
		"selector-max-empty-lines":0,
		"max-nesting-depth": [3, {
            "message": "El nesting es confuso. No más de tres niveles de identación"
        }],
        "function-max-empty-lines":0,
        "unit-case": "lower",
        "value-keyword-case": "lower",
        "declaration-colon-newline-after": ["always-multi-line", {
        	"message": "Si la declaración es multilínea nueva línea despues de :"
        }],
        "declaration-colon-space-after": ["always", {
        	"message": "Despues de los : siempre espacio en blanco"
        }],
        "declaration-colon-space-before": ["never", {
        	"message": "Las propiedades no llevan espacio en blanco con los :"
        }],
        "declaration-block-semicolon-newline-after": ["always", {
        	"message": "Despues del ; siempre una nueva línea"
        }],
        "declaration-block-semicolon-space-before": ["never", {
            "message": "Los valores no se separan del ;"
        }],
        "declaration-block-trailing-semicolon": ["always", {
        	"message": "Falta el ; en una declaración"
        }],
        "block-closing-brace-empty-line-before": ["never", {
        	"message": "Evita dejar líneas vacias antes de las llaves de cierre"
        }],
        "block-closing-brace-newline-after": ["always", {
        	"message": "Despues de la llave de cierre siempre una nueva línea"
        }],
        "block-closing-brace-newline-before": ["always", {
        	"message": "La llave de cierre debe tener su propia línea"
        }],
 		"block-opening-brace-newline-after": ["always", {
            "message": "La llave de apertura requiere una nueva línea"
        }],
        "block-opening-brace-space-before": ["always", {
            "message": "La llave de apertura debe ir precedida de un espacio en blanco"
        }],
        "selector-attribute-brackets-space-inside": "never",
        "selector-attribute-operator-space-after": "never",
        "selector-attribute-operator-space-before": "never",
        "selector-combinator-space-after": ["always", {
            "message": "Espacio entre selectores"
        }],
        "selector-combinator-space-before": ["always", {
            "message": "Espacio entre selectores"
        }],
        "selector-pseudo-element-colon-notation": "double",
        "selector-type-case": "lower",
        "selector-list-comma-newline-after": ["always", {
        	"message": "Cada selector debe tener su propia línea"
        }],
        "media-feature-colon-space-after": "always",
        "media-feature-colon-space-before": "never",
        "at-rule-name-space-after": "always-single-line",
        "at-rule-semicolon-newline-after": ["always", {
        	"message": "Cada at-rule en su propia línea"
        }],
        "max-empty-lines":[4, {
        	"ignore": ["comments"],
        	"message": "No dejes mas de dos líneas vacias"
        }]
     
	}
}